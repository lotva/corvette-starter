{
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"tsconfig.json": "tsconfig.*.json, env.d.ts",
		"vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
		"package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig, stylelint.config.js, commitlint.config.ts"
	},

	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit",
		"source.fixAll.prettier": "never"
	},
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	"stylelint.validate": ["css", "postcss", "vue"],

	"editor.tabSize": 2
}
